        "tags" : [ "talk" ],
        "summary" : "建立聊天室",
        "operationId" : "createRoom",
        "description" : "建立聊天室，建立的人會直接成為聊天室成員\n",
        "requestBody" : {
          "description" : "初始成員 *(選填)*",
          "required" : false,
          "content" : {
            "application/json" : {
              "schema" : {
                "type" : "object",
                "properties" : {
                  "users" : {
                    "type" : "array",
                    "items" : {
                      "$ref" : "#/components/schemas/User"
                    }
                  }
                }
              }
            },
            "application/x-www-form-urlencoded" : {
              "schema" : {
                "type" : "object",
                "properties" : {
                  "users" : {
                    "type" : "string",
                    "example" : "1,2,3"
                  }
                }
              }
            }
          }
        },
        "responses" : {
          "201" : {
            "description" : "成功建立聊天室",
            "content" : {
              "application/json" : {
                "schema" : {
                  "oneOf" : [ {
                    "$ref" : "#/components/schemas/TokboxRoom"
                  }, {
                    "$ref" : "#/components/schemas/SkywayRoom"
                  } ]
                }
              }
            }
          },
          "401" : {
            "$ref" : "#/components/responses/Unauthorized"
          }
        }
      },
      "get" : {
        "tags" : [ "talk" ],
        "summary" : "聊天室列表",
        "operationId" : "createRoom",
        "description" : "聊天室列表，支援分頁查詢\n",
        "parameters" : [ {
          "$ref" : "#/components/parameters/page"
        }, {
          "$ref" : "#/components/parameters/page_size"
        }, {
          "$ref" : "#/components/parameters/pagination"
        } ],
        "responses" : {
          "200" : {
            "description" : "成功取回聊天室列表",
            "content" : {
              "application/json" : {
                "schema" : {
                  "allOf" : [ {
                    "$ref" : "#/components/schemas/PaginationResult"
                  }, {
                    "type" : "object",
                    "properties" : {
                      "results" : {
                        "type" : "array",
                        "items" : {
                          "oneOf" : [ {
                            "$ref" : "#/components/schemas/TokboxRoom"
                          }, {
                            "$ref" : "#/components/schemas/SkywayRoom"
                          } ]
                        }
                      }
                    }
                  } ]
                }
              }
            }
          },
          "401" : {
            "$ref" : "#/components/responses/Unauthorized"
          },
          "404" : {
            "$ref" : "#/components/responses/NotFound"
          }
        }
      }
    },
