          "message" : {
            "type" : "string",
            "example" : "custom_reason"
          }
        }
      },
      "RTCVender" : {
        "description" : "WebRTC供應商",
        "type" : "string",
        "enum" : [ "tokbox", "skyway" ]
      },
      "Pagination" : {
        "description" : "分頁控制參數",
        "type" : "object",
        "properties" : {
          "page_size" : {
            "type" : "integer",
            "default" : 100,
            "example" : 100
          },
          "page" : {
            "type" : "integer",
            "default" : 0,
            "example" : 0
          }
        }
      },
      "PaginationResult" : {
        "description" : "分頁控制回傳容器",
        "type" : "object",
        "required" : [ "count", "results" ],
        "properties" : {
          "count" : {
            "type" : "integer",
            "minimum" : 0
          },
          "next" : {
            "type" : "string",
            "format" : "url"
          },
          "previous" : {
            "type" : "string",
            "format" : "url"
          },
          "results" : {
            "type" : "array",
            "items" : { }
          }
        }
      },
      "User" : {
        "description" : "使用者",
        "type" : "object",
        "required" : [ "id", "display_name" ],
        "properties" : {
          "id" : {
            "type" : "integer"
          },
          "display_name" : {
            "type" : "string"
          }
        }
      },
      "Room" : {
        "description" : "聊天室",
        "type" : "object",
        "required" : [ "id", "members" ],
        "properties" : {
          "id" : {
            "type" : "integer",
            "example" : 1
          },
          "members" : {
            "type" : "array",
            "items" : {
              "$ref" : "#/components/schemas/User"
            }
          }
        }
      },
      "TokboxRoom" : {
        "allOf" : [ {
          "$ref" : "#/components/schemas/Room"
        }, {
          "type" : "object",
          "description" : "Check [OpenTok](https://tokbox.com/developer/guides/basics/) spec here.",
          "required" : [ "session_id", "token" ],
          "properties" : {
            "session_id" : {
              "description" : "An OpenTok Seenssion ID",
              "type" : "string",
              "example" : "2_MX40NTYzODkyMn5-MTUzMDU5OTY5MTEwMn42akp2L0JxZ0RUK202YlZNWklPWmU5YmN-fg"
            },
            "token" : {
              "description" : "OpenTok session token for client. ⚠️ <span style=\"color:red\">**One client one token!**</span> ⚠️",
              "type" : "string",
              "example" : ""
            }
          }
        } ]
      },
      "SkywayRoom" : {
        "allOf" : [ {
          "$ref" : "#/components/schemas/Room"
        }, {
          "type" : "object",
          "description" : "Check [SkyWay](https://webrtc.ecl.ntt.com/en/communication-model.html) spec here.",
          "required" : [ "room_name" ],
          "properties" : {
            "room_name" : {
              "description" : "An unique room name for skyway room.",
              "type" : "string",
              "format" : "uuid",
              "example" : "d290f1ee-6c54-4b01-90e6-d701748f0851"
            }
          }
        } ]
      }
    }
